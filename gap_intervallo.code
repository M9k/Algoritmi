gap(A[], n)
	return gapRec(A,0,n)

gapRec(A[], p, r)
	if(p<r)
		q = (p+r)/2
		if(A[q]-A[p] > r-p)
			return gapRec(A, q, p)
		else
			return gapRec(A, p, r)
	else
		return p

